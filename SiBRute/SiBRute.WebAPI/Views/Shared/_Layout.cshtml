
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>
        @{
            if (string.IsNullOrEmpty(ViewBag.Title))
            {
                 @: SiB Rute
            }
            else
            {
                @: SiB Rute - @ViewBag.Title
            }
        }       
    </title>   
    @Styles.Render("~/Content/css")
</head>
<body>
   <div class="wrapper">
      <div class="navbar">
         <div class="container">
            <div class="navbar-header">
               <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
               </button>

               <a href="@Url.Action("Index", "Home")">
                  <div id="nav-logo">
                     <img src="~/Content/Images/logo.png" />
                  </div>
               </a>
            </div>



            <div class="navbar-collapse collapse">

               @if (User.Identity.IsAuthenticated)
               {
                  <p>Hello @User.Identity.Name</p>
               }
                  <ul class="nav navbar-nav navbar-right">
                     <li>@Html.ActionLink("RUTE", "ListAsync", "Routes")</li>
                     <li>@Html.ActionLink("UNOS", "NewAsync", "Routes")</li>
                     <li>@Html.ActionLink("PLANER", "Planer", "Routes")</li>

                     @if (User.Identity.IsAuthenticated)
                     {
                        <li class="li-right">@Html.ActionLink("ODJAVA", "LogOut", "Auth")</li>
                     }
                     else
                     {
                        <li class="li-right">@Html.ActionLink("PRIJAVA", "LogIn", "Auth")</li>
                     }

                  </ul>
               </div>

            </div>
         </div>

                  <div class="container">
                     @RenderBody()
                  </div>

                  <footer class="text-center">
                     <ul class="nav-footer">
                        <li>@Html.ActionLink("RUTE", "ListAsync", "Routes")</li>
                        <li>@Html.ActionLink("UNOS", "NewAsync", "Routes")</li>
                        <li>@Html.ActionLink("PLANER", "Planer", "Routes")</li>
                        <li>@Html.ActionLink("PRIJAVA", "Login", "Home")</li>
                        <li>@Html.ActionLink("O STRANICI", "UnderConstruction", "Home")</li>
                        <li>@Html.ActionLink("KONTAKT", "UnderConstruction", "Home")</li>
                     </ul>
                     <h1>Biciklističke rute Slavonije i Baranje</h1>
                     <p>copyright &copy; 2015, Krunoslav Šterle</p>
                  </footer>

               </div>

                  @Scripts.Render("~/bundles/jquery")
                  @Scripts.Render("~/bundles/bootstrap")
                  @RenderSection("scripts", required: false)
               </body>
</html>
